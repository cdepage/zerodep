{
  "root": "packages/guards",
  "sourceRoot": "packages/guards/src",
  "targets": {
    "originalBuild": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/guards",
        "main": "packages/guards/src/index.ts",
        "tsConfig": "packages/guards/tsconfig.lib.json",
        "assets": ["packages/guards/*.md"]
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/guards",
          "rollup -c packages/guards/rollup.config.ts",
          "mv dist/packages/guards/index.esm.d.ts dist/packages/guards/index.d.ts",
          "cp packages/guards/*.md dist/packages/guards",
          "cp packages/guards/package.json dist/packages/guards/package.json",
          "uglifyjs dist/packages/guards/index.esm.js -o dist/packages/guards/index.esm.min.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/guards/index.cjs.js -o dist/packages/guards/index.cjs.min.js -c --annotations --comments /@source/",
          "rm dist/packages/guards/index.esm.js",
          "rm dist/packages/guards/index.cjs.js"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/guards/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/guards"],
      "options": {
        "jestConfig": "packages/guards/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "packageFix": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/guards"
      }
    }
  },
  "tags": []
}
