{
  "name": "string-words",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/string/words/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/string/words/*",
          "rollup -c packages/string/words/rollup.config.mjs",
          "mv dist/packages/string/words/esm.d.ts dist/packages/string/words/index.d.ts",
          "cp packages/string/words/README.md dist/packages/string/words/README.md",
          "cp LICENSE.md dist/packages/string/words/LICENSE.md",
          "cp SECURITY.md dist/packages/string/words/SECURITY.md",
          "cp packages/string/words/package.json dist/packages/string/words/package.json",
          "uglifyjs dist/packages/string/words/esm.js -o dist/packages/string/words/esm.js -c --no-annotations",
          "uglifyjs dist/packages/string/words/cjs.js -o dist/packages/string/words/cjs.js -c --no-annotations",
          "rm -rf dist/packages/string/words/cjs.d.ts"
        ],
        "parallel": false
      }
    },
    "publish": {
      "command": "cd dist/packages/string/words && npm publish --access public"
    },
    "packageFix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/string/words"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/string/words/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/string/words/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
