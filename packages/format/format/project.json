{
  "root": "packages/format/format",
  "sourceRoot": "packages/format/format/src",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/format/format",
          "rollup -c packages/format/format/rollup.config.ts",
          "mv dist/packages/format/format/index.esm.d.ts dist/packages/format/format/index.d.ts",
          "rm dist/packages/format/format/index.cjs.d.ts",
          "cp packages/format/format/README.md dist/packages/format/format/README.md",
          "cp packages/format/format/package.json dist/packages/format/format/package.json",
          "uglifyjs dist/packages/format/format/index.esm.js -o dist/packages/format/format/index.esm.min.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/format/format/index.cjs.js -o dist/packages/format/format/index.cjs.min.js -c --annotations --comments /@source/",
          "rm dist/packages/format/format/index.esm.js",
          "rm dist/packages/format/format/index.cjs.js"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/format/format/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/format/format"],
      "options": {
        "jestConfig": "packages/format/format/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "packageFix": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/format/format"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/packages/format/format"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["errors", "format.errors"]
}
