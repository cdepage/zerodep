{
  "name": "case-sentence",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/case/sentence/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/case/sentence/*",
          "rollup -c packages/case/sentence/rollup.config.mjs",
          "mv dist/packages/case/sentence/esm.d.ts dist/packages/case/sentence/index.d.ts",
          "cp packages/case/sentence/README.md dist/packages/case/sentence/README.md",
          "cp packages/case/sentence/package.json dist/packages/case/sentence/package.json",
          "uglifyjs dist/packages/case/sentence/esm.js -o dist/packages/case/sentence/esm.js -c --no-annotations",
          "uglifyjs dist/packages/case/sentence/cjs.js -o dist/packages/case/sentence/cjs.js -c --no-annotations",
          "rm -rf dist/packages/case/sentence/cjs.d.ts"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd dist/packages/case/sentence",
          "npm publish --access=public"
        ]
      },
      "dependsOn": ["build"]
    },
    "packageFix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/case/sentence"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/case/sentence/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/case/sentence/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
