{
  "root": "packages/utils",
  "sourceRoot": "packages/utils/src",
  "targets": {
    "originalBuild": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "compiler": "swc",
        "project": "packages/utils/package.json",
        "entryFile": "packages/utils/src/index.ts",
        "outputPath": "dist/packages/utils",
        "deleteOutputPath": true,
        "format": ["esm", "cjs"],
        "tsConfig": "packages/utils/tsconfig.lib.json"
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/utils",
          "rollup -c packages/utils/rollup.config.ts",
          "mv dist/packages/utils/index.esm.d.ts dist/packages/utils/index.d.ts",
          "rm dist/packages/utils/index.cjs.d.ts",
          "cp packages/utils/*.md dist/packages/utils",
          "cp packages/utils/package.json dist/packages/utils/package.json",
          "uglifyjs dist/packages/utils/index.esm.js -o dist/packages/utils/index.esm.min.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/utils/index.cjs.js -o dist/packages/utils/index.cjs.min.js -c --annotations --comments /@source/",
          "rm dist/packages/utils/index.esm.js",
          "rm dist/packages/utils/index.cjs.js"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/utils/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/utils"],
      "options": {
        "jestConfig": "packages/utils/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "packageFix": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/utils"
      }
    }
  },
  "tags": []
}
