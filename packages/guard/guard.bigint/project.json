{
  "root": "packages/guard/guard.bigint",
  "sourceRoot": "packages/guard/guard.bigint/src",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm dist/packages/guard/guard.bigint/*",
          "rollup -c packages/guard/guard.bigint/rollup.config.ts",
          "mv dist/packages/guard/guard.bigint/esm.d.ts dist/packages/guard/guard.bigint/index.d.ts",
          "cp packages/guard/guard.bigint/README.md dist/packages/guard/guard.bigint/README.md",
          "cp packages/guard/guard.bigint/package.json dist/packages/guard/guard.bigint/package.json",
          "uglifyjs dist/packages/guard/guard.bigint/esm.js -o dist/packages/guard/guard.bigint/esm.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/guard/guard.bigint/cjs.js -o dist/packages/guard/guard.bigint/cjs.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/guard/guard.bigint/umd.js -o dist/packages/guard/guard.bigint/umd.js -c --annotations --comments /@source/",
          "rm dist/packages/guard/guard.bigint/cjs.d.ts",
          "rm dist/packages/guard/guard.bigint/umd.d.ts"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/guard/guard.bigint/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/guard/guard.bigint"],
      "options": {
        "jestConfig": "packages/guard/guard.bigint/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "packageFix": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/guard/guard.bigint"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/packages/guard/guard.bigint"
      }
    }
  },
  "tags": []
}
