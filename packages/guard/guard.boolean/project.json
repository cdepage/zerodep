{
  "root": "packages/guard/guard.boolean",
  "sourceRoot": "packages/guard/guard.boolean/src",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm dist/packages/guard/guard.boolean/*",
          "rollup -c packages/guard/guard.boolean/rollup.config.ts",
          "mv dist/packages/guard/guard.boolean/esm.d.ts dist/packages/guard/guard.boolean/index.d.ts",
          "cp packages/guard/guard.boolean/README.md dist/packages/guard/guard.boolean/README.md",
          "cp packages/guard/guard.boolean/package.json dist/packages/guard/guard.boolean/package.json",
          "uglifyjs dist/packages/guard/guard.boolean/esm.js -o dist/packages/guard/guard.boolean/esm.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/guard/guard.boolean/cjs.js -o dist/packages/guard/guard.boolean/cjs.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/guard/guard.boolean/umd.js -o dist/packages/guard/guard.boolean/umd.js -c --annotations --comments /@source/",
          "rm dist/packages/guard/guard.boolean/cjs.d.ts",
          "rm dist/packages/guard/guard.boolean/umd.d.ts"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/guard/guard.boolean/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/guard/guard.boolean"],
      "options": {
        "jestConfig": "packages/guard/guard.boolean/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "packageFix": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/guard/guard.boolean"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/packages/guard/guard.boolean"
      }
    }
  },
  "tags": []
}
