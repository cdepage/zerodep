{
  "root": "packages/guard/guard",
  "sourceRoot": "packages/guard/guard/src",
  "targets": {
    "originalBuild": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/guard/guard",
        "main": "packages/guard/guard/src/index.ts",
        "tsConfig": "packages/guard/guard/tsconfig.lib.json",
        "assets": ["packages/guard/guard/*.md"]
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/guard/guard",
          "rollup -c packages/guard/guard/rollup.config.ts",
          "mv dist/packages/guard/guard/index.esm.d.ts dist/packages/guard/guard/index.d.ts",
          "rm dist/packages/guard/guard/index.cjs.d.ts",
          "cp packages/guard/guard/*.md dist/packages/guard/guard",
          "cp packages/guard/guard/package.json dist/packages/guard/guard/package.json",
          "uglifyjs dist/packages/guard/guard/index.esm.js -o dist/packages/guard/guard/index.esm.min.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/guard/guard/index.cjs.js -o dist/packages/guard/guard/index.cjs.min.js -c --annotations --comments /@source/",
          "rm dist/packages/guard/guard/index.esm.js",
          "rm dist/packages/guard/guard/index.cjs.js"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/guard/guard/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/guard/guard"],
      "options": {
        "jestConfig": "packages/guard/guard/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "packageFix": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/guard/guard"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/packages/guard/guard"
      }
    }
  },
  "tags": []
}
