{
  "name": "guard-object",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/guard/object/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/guard/object/*",
          "rollup -c packages/guard/object/rollup.config.mjs",
          "mv dist/packages/guard/object/esm.d.ts dist/packages/guard/object/index.d.ts",
          "cp packages/guard/object/README.md dist/packages/guard/object/README.md",
          "cp LICENSE.md dist/packages/guard/object/LICENSE.md",
          "cp SECURITY.md dist/packages/guard/object/SECURITY.md",
          "cp packages/guard/object/package.json dist/packages/guard/object/package.json",
          "uglifyjs dist/packages/guard/object/esm.js -o dist/packages/guard/object/esm.js -c --no-annotations",
          "uglifyjs dist/packages/guard/object/cjs.js -o dist/packages/guard/object/cjs.js -c --no-annotations",
          "rm -rf dist/packages/guard/object/cjs.d.ts"
        ],
        "parallel": false
      }
    },
    "publish": {
      "command": "cd dist/packages/guard/object && npm publish --access public"
    },
    "packageFix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/guard/object"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/guard/object/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/guard/object/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
