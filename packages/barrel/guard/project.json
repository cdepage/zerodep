{
  "name": "barrel-guard",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/barrel/guard/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/barrel/guard/*",
          "rollup -c packages/barrel/guard/rollup.config.mjs",
          "mv dist/packages/barrel/guard/esm.d.ts dist/packages/barrel/guard/index.d.ts",
          "cp packages/barrel/guard/README.md dist/packages/barrel/guard/README.md",
          "cp packages/barrel/guard/package.json dist/packages/barrel/guard/package.json",
          "uglifyjs dist/packages/barrel/guard/esm.js -o dist/packages/barrel/guard/esm.js -c --no-annotations",
          "uglifyjs dist/packages/barrel/guard/cjs.js -o dist/packages/barrel/guard/cjs.js -c --no-annotations",
          "rm -rf dist/packages/barrel/guard/cjs.d.ts"
        ],
        "parallel": false
      }
    },
    "publish": {
      "command": "cd dist/packages/barrel/guard && npm publish --access public"
    },
    "packageFix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/barrel/guard"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/barrel/guard/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/barrel/guard/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
