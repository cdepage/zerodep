{
  "root": "packages/barrels/utils",
  "sourceRoot": "packages/barrels/utils/src",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -f dist/packages/barrels/utils/*",
          "rollup -c packages/barrels/utils/rollup.config.ts",
          "mv dist/packages/barrels/utils/esm.d.ts dist/packages/barrels/utils/index.d.ts",
          "cp packages/barrels/utils/README.md dist/packages/barrels/utils/README.md",
          "cp packages/barrels/utils/package.json dist/packages/barrels/utils/package.json",
          "uglifyjs dist/packages/barrels/utils/esm.js -o dist/packages/barrels/utils/esm.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/barrels/utils/cjs.js -o dist/packages/barrels/utils/cjs.js -c --annotations --comments /@source/",
          "uglifyjs dist/packages/barrels/utils/umd.js -o dist/packages/barrels/utils/umd.js -c --annotations --comments /@source/",
          "rm dist/packages/barrels/utils/cjs.d.ts",
          "rm dist/packages/barrels/utils/umd.d.ts"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/barrels/utils/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/barrels/utils"],
      "options": {
        "jestConfig": "packages/barrels/utils/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "packageFix": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/barrels/utils"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/packages/barrels/utils"
      }
    }
  },
  "tags": []
}
