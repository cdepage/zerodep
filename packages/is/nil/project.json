{
  "name": "is-nil",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/is/nil/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/is/nil/*",
          "rollup -c packages/is/nil/rollup.config.mjs",
          "mv dist/packages/is/nil/esm.d.ts dist/packages/is/nil/index.d.ts",
          "cp packages/is/nil/README.md dist/packages/is/nil/README.md",
          "cp packages/is/nil/package.json dist/packages/is/nil/package.json",
          "uglifyjs dist/packages/is/nil/esm.js -o dist/packages/is/nil/esm.js -c --no-annotations",
          "uglifyjs dist/packages/is/nil/cjs.js -o dist/packages/is/nil/cjs.js -c --no-annotations",
          "rm -rf dist/packages/is/nil/cjs.d.ts"
        ],
        "parallel": false
      }
    },
    "publish": {
      "command": "cd dist/packages/is/nil && npm publish --access public"
    },
    "packageFix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/is/array"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/is/nil/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/is/nil/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
