{
  "name": "types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/types/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/types/*",
          "rollup -c packages/types/rollup.config.mjs",
          "mv dist/packages/types/esm.d.ts dist/packages/types/index.d.ts",
          "cp packages/types/README.md dist/packages/types/README.md",
          "cp packages/types/package.json dist/packages/types/package.json",
          "uglifyjs dist/packages/types/esm.js -o dist/packages/types/esm.js -c --no-annotations",
          "rm dist/packages/types/esm.js"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["cd dist/packages/types", "npm publish --access=public"]
      },
      "dependsOn": ["build"]
    },
    "packageFix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm-sort && fixpack",
        "cwd": "packages/types"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/types/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/types/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
